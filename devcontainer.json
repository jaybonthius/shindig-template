{
  "name": "Shindig-Codespaces",
  // Use the universal image that Codespaces prefers
  "image": "mcr.microsoft.com/devcontainers/universal:latest",
  // Add required features
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "18"
    }
  },
  // Install Racket and other dependencies
  "onCreateCommand": [
    "sudo add-apt-repository ppa:plt/racket -y",
    "sudo apt-get update",
    "sudo apt-get install -y racket xvfb",
    "sudo npm install -g pnpm@9.10.0"
  ],
  // Project setup
  "postCreateCommand": [
    "pnpm install",
    "raco pkg install --auto --clone shindig https://github.com/jaybonthius/shindig.git"
  ],
  "forwardPorts": [
    8085
  ],
  "portsAttributes": {
    "8085": {
      "label": "Pollen Server",
      "onAutoForward": "notify"
    }
  },
  "customizations": {
    "codespaces": {
      "openFiles": [
        "source/main.ptx"
      ]
    },
    "vscode": {
      "settings": {
        "material-icon-theme.files.associations": {
          "Procfile.static": "heroku",
          "*.pm": "document",
          "*.p": "template"
        },
        "material-icon-theme.folders.associations": {
          "sqlite": "database",
          "shindig": "src"
        },
        "liveServer.settings.port": 7070,
        "files.associations": {
          "*.html.p": "html",
          "Profile.*": "procfile"
        },
        "[racket]": {
          "editor.rulers": [
            88
          ]
        },
        "files.exclude": {
          "**/compiled": true,
          "node_modules": true
        },
        "magicRacket.languageServer.command": "xvfb-run",
        "magicRacket.languageServer.arguments": [
          "--auto-servernum",
          "racket",
          "--lib",
          "racket-langserver"
        ],
        "cssvar.files": [
          "./node_modules/open-props/open-props.min.css"
        ],
        "cssvar.ignore": [],
        "cssvar.extensions": [
          "css",
          "postcss",
          "jsx",
          "tsx"
        ]
      },
      "extensions": [
        "csstools.postcss",
        "alexcvzz.vscode-sqlite",
        "austenc.tailwind-docs",
        "benspaulding.procfile",
        "bradlc.vscode-tailwindcss",
        "eamodio.gitlens",
        "esbenp.prettier-vscode",
        "evzen-wybitul.magic-racket",
        "george-alisson.html-preview-vscode",
        "github.copilot",
        "github.copilot-chat",
        "hbenl.vscode-test-explorer",
        "james-yu.latex-workshop",
        "littlefoxteam.vscode-python-test-adapter",
        "moalamri.inline-fold",
        "ms-python.debugpy",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-vscode.live-server",
        "ms-vscode.test-adapter-converter",
        "otovo-oss.htmx-tags",
        "phoenisx.cssvar",
        "ritwickdey.liveserver",
        "tldraw-org.tldraw-vscode",
        "yzhang.markdown-all-in-one"
      ]
    }
  }
}