{
  "material-icon-theme.files.associations": {
      "Procfile.static": "heroku",
      "*.pm": "document",
      "*.p": "template",
      "*.pp": "document",
      "*.ptree": "tree"
  },
  "material-icon-theme.folders.associations": {
      "sqlite": "database",
      "shindig": "src",
      "shindig-docker": "docker",
  },
  "liveServer.settings.port": 7070,
  "files.associations": {
    "*.html.p": "html",
    "Profile.*": "procfile"
  },
  "[racket]": {
    "editor.rulers": [88],
  },
  "files.exclude": {
    "**/compiled": true,
    "node_modules": true,
    // I should probably change this later, but these files really annoy me (except when I need them)
    "**/*.fdb_latexmk": true,
    "**/*.fls": true,
    "**/*.aux": true,
    "**/*.log": true,
  },
  // this is needed for the racket language server to work on a headless server
  "magicRacket.languageServer.command": "xvfb-run",
  "magicRacket.languageServer.arguments": [
      "--auto-servernum",
      "racket",
      "--lib",
      "racket-langserver"
  ],
  "cssvar.files": [
    "./node_modules/open-props/open-props.min.css",
  ],
   // do not ignore node_modules css files, which is ignored by default
  "cssvar.ignore": [],
   // add support for autocomplete in JS or JS like files
  "cssvar.extensions": [
    "css", "postcss", "jsx", "tsx"
  ]
}